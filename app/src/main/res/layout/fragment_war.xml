<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WarFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/green">

    <LinearLayout
        android:id="@+id/opponentWarContainer"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/opponentCard1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/opponentCard2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/opponentCard3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp">

        <TextView
            android:textStyle="bold"
            android:id="@+id/textViewWarStroke"
            android:textSize="@dimen/medium_text_size"
            android:layout_marginTop="2dp"
            android:layout_marginStart="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#1c1c1c"
            android:text="@string/war_text"/>

    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/medium_text_size"
        android:id="@+id/textViewWar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="@string/war_text"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/playerWarContainer"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/playerCard1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/playerCard2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/playerCard3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"/>
    </LinearLayout>

</LinearLayout>