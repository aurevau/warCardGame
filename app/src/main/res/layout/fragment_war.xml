<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".WarFragment">

    <LinearLayout
        android:id="@+id/opponentWarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/opponentCard1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/background_card" />

        <ImageView
            android:id="@+id/opponentCard2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/background_card" />

        <ImageView
            android:id="@+id/opponentCard3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewWarStroke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:text="@string/war_text"
            android:textAlignment="center"
            android:textColor="#1c1c1c"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewWar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/war_text"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/playerWarContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/playerCard1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/background_card" />

        <ImageView
            android:id="@+id/playerCard2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/background_card" />

        <ImageView
            android:id="@+id/playerCard3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card" />
    </LinearLayout>

</LinearLayout>