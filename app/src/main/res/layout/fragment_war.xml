<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WarFragment"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/green">

    <LinearLayout
        android:id="@+id/opponentWarContainer"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/opponentCard1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/opponentCard2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/opponentCard3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewWar"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:text="WAR HAS BEGUN WHOEVER PICKS THE \n HIGHEST CARD GETS ALL THE CARDS!"/>

    <LinearLayout
        android:id="@+id/playerWarContainer"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/playerCard1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/playerCard2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"
            android:layout_marginRight="10dp"/>
        <ImageView
            android:id="@+id/playerCard3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/background_card"/>
    </LinearLayout>

</LinearLayout>